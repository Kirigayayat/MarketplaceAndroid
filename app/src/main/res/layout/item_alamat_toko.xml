<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginVertical="@dimen/_8sdp"
    android:layout_marginHorizontal="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_kota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makassar"
                android:layout_centerVertical="true"
                android:textAppearance="@style/TypographyStyles.Text2"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_menu"
                style="@style/image_clickable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_more_vert_24"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kompleks Hartaco Indah Blok 1E No.6, Kec. Balang Baru, Kota Makassar"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/gray_200"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TypographyStyles.Text3"/>
        
        <View
            android:background="@color/gray2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_asset_smartphone"
            android:text="089694953226"
            android:drawablePadding="@dimen/_7sdp"
            android:textAppearance="@style/TypographyStyles.Text3"
            android:textColor="@color/gray_200"
            android:drawableTint="@color/gray_200"/>

        <View
            android:background="@color/gray2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_asset_email"
            android:text="kirigayayat@gmail.com"
            android:drawablePadding="@dimen/_7sdp"
            android:textAppearance="@style/TypographyStyles.Text3"
            android:textColor="@color/gray_200"
            android:drawableTint="@color/gray_200"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>